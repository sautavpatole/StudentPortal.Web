@{
}

@model List<StudentPortal.Web.Models.Entities.Student>


<h1>Students</h1>

@if(TempData["SuccessMessage"]!=null)
{
    <div class="alert alert-success fade-out">@TempData["SuccessMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td> <a class="btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a> </td>
            </tr>
            
        }
    </tbody>
</table>

<style>
    .fade-out {
        animation: fadeOut 4s forwards;
        animation-delay: 3s; 
    }

    @@keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
    }
</style>